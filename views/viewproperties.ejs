<%-include('./partials/_header.ejs')%>

<div class="properties-container">
  <form action="/search" method="get" class="search-box">
    <div class="view-properties-search">
      <input
        type="text"
        class="searchTerm"
        placeholder="Search by location...."
        name="search"
      />
      
      <button type="submit" class="searchButton">
        <i class="fa fa-search"></i>
      </button>
    </div>
    <div>
      <select name="type" id="type" >
        <option value="" selected disabled hidden>Choose here</option>
        <option value="house">House</option>
        <option value="apartment">Apartment</option>
        <option value="flat">Flat</option>
        <option value="room">Room</option>
      </select>
    </div>
  </form>
</div>
<div class="propertyheader">
  <h2>All Properties</h2>
</div>
<div class="properties">
  <% property.forEach((prop)=>{ %>
  <div class="single-property">
    <div class="propertyimage">
      <%if(!prop.image){ %>
        <img src="/images/download.png" alt="property image" />
        <% } else {%>
        <img src="/images/<%=prop.image%>" alt="property image" />
        <% } %>
    </div>
    <div class="property">
      <p>
        <span class="key">Location : </span
        ><span class="value"><%=prop.location%></span>
      </p>
      <p>
        <span class="key">Price :</span>
        <span class="value"><%=prop.price%></span>
      </p>
      <p>
        <span class="key">Type :</span>
        <span class="value"><%=prop.type%></span>
      </p>
      <p class="key">Description</p>
      <p class="value"><%=prop.description%></p>
      <div class="renter"><%=prop.renter%></div>
    </div>
    <div class="change-button"></div>
  </div>

  <% }) %>
</div>
<!-- <script src="/js/app.js"></script> -->

<%-include('./partials/_footer.ejs')%>
